/* pages/teacher/custom/page/page.wxss */
.one{
  display: flex;
  flex-direction: column;
  width: 400rpx;
  height: 200rpx;
}

.boys,.girls{
  margin-left: 25rpx;
  display: flex;
  flex-direction: row;
  width: 400rpx;
  height: 80rpx;
  line-height: 60rpx;
}
.text_1{
  margin-left: 25rpx;
  color: #006eff;
  font-weight: bold;
}
.text_2{
  font-size: 13px;
}
.one_jt1,.one_jt2,.two_jt1,.two_jt2{
  margin-right: -8rpx;
  height: 50rpx;
  width: 50rpx;
}
/* 下拉框 */
.selected{
  color: #ADADAD;
  width: 25%;
  height: 46rpx;
  margin:8rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ADADAD;
  border-radius: 5px;
  padding: 0 10rpx;
  font-size: 32rpx;
  position: relative;
}

.two{
  display: flex;
  flex-direction: column;
  display: flex;
  margin-top: 20rpx;
  width: 600rpx;
  height: 150rpx;
}
.apartment{
  margin-left: 25rpx;
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  width: 600rpx;
  height: 80rpx;
}
.text_2{
  font-size: 13px;
  margin-top: 7rpx;
}
.submit{
  margin-left: 25rpx;
  margin-top: 8rpx;
  font-size: 9px;
  height: 20px;
  background-color: #87f2a7;
}

/* 下拉内容 */
.one_select_box_1,.one_select_box_2{
  margin-left: 135rpx;
  margin-top: 57rpx;
  width: 15%;
  background-color: #fff;
  overflow: hidden;
  animation: myfirst 0.2s;
  font-size: 30rpx;
  z-index: 1; /*显示在最上层 */
  position: absolute;
}
/* 下拉框内的字体 */
.select_one {
  padding-left: 45rpx;
  width: 80%;
  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
}
/* 下拉过度效果 */

@keyframes myfirst {
  from {
    height: 0rpx;
  }

  to {
    height: 210rpx;
  }
}
.one_select_box_1{
  height: 420rpx; 
}
.one_select_box_2{
  height: 300rpx;
}

.two_select_box_1,.two_select_box_2{
  margin-top: 57rpx;
  width: 20%;
  background-color: #fff;
  overflow: hidden;
  animation: myfirst 0.2s;
  font-size: 30rpx;
  z-index: 1; /*显示在最上层 */
  position: absolute;
}
.two_select_box_1{
  height: 200rpx;
  margin-left: 18rpx;
}
.two_select_box_2{
  height: 150rpx;
  margin-left: 240rpx;
}

